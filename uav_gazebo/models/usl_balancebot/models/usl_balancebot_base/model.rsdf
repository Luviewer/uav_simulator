<?xml version="1.0" ?>
  <%

  # ----------------------------------------------------------------
  base_dx = 0
  base_dy = 0
  base_dz = 0.0

  base_mass = 30.5

  base_x  = 0.2
  base_y  = 0.4
  base_z  = 0.4

%>
  <sdf version="1.5">
    <model name="usl_balancebot_base">
      <%# ----------------------------------------------------------- %>
      <link name="base">
      <pose>0 0 <%= base_dz %>  0 0 0</pose>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass><%= base_mass %></mass>
        <inertia>
          <ixx><%= base_mass*(base_y*base_y + base_z*base_z)/12 %></ixx>
          <iyy><%= base_mass*(base_x*base_x + base_z*base_z)/12 %></iyy>
          <izz><%= base_mass*(base_z*base_z + base_x*base_x)/12 %></izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <pose>0 0 <%= 0 %>  0 0 0</pose>
        <geometry>
          <box>
            <size><%= base_x%> <%= base_y%> <%= base_z%></size>
          </box>
        </geometry>
        <surface>
          <contact>
            <ode/>
          </contact>
          <friction>
            <ode/>
          </friction>
        </surface>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size><%= base_x%> <%= base_y%> <%= base_z%></size>
          </box>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>
    <link name='imu_link'>
    <inertial>
      <pose>0 0 0 0 0 0</pose>
      <mass>0.15</mass>
      <inertia>
        <ixx>0.00001</ixx>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyy>0.00002</iyy>
        <iyz>0</iyz>
        <izz>0.00002</izz>
      </inertia>
    </inertial>
    <sensor name="imu_sensor" type="imu">
      <pose>0 0 0 3.141593 0 0</pose>
      <always_on>1</always_on>
      <update_rate>1000.0</update_rate>
      <topic>__default_topic__</topic>
    </sensor>
  </link>
  <joint name='imu_joint' type='revolute'>
    <child>imu_link</child>
    <parent>base</parent>
    <axis>
      <xyz>0 0 1</xyz>
      <limit>
        <lower>-0.0001</lower>
        <upper>0.00001</upper>
        <effort>0</effort>
        <velocity>0</velocity>
      </limit>
      <dynamics>
        <damping>1.0</damping>
      </dynamics>
      <use_parent_model_frame>1</use_parent_model_frame>
    </axis>
    <physics>
      <ode>
        <implicit_spring_damper>1</implicit_spring_damper>
      </ode>
    </physics>
  </joint>
  <%# ----------------------------------------------------------- %>
 
</model>
</sdf>
