<?xml version="1.0" ?>
  <%

  # ----------------------------------------------------------------
  platform_base_dx = 0
  platform_base_dy = 0
  platform_base_dz = 0.0

  platform_base_mass = 3.5

  platform_base_ixx  = 0.2
  platform_base_iyy  = 0.2
  platform_base_izz  = 0.1

%>
  <sdf version="1.5">
    <model name="arduwoodpecker_batt">
      <%# ----------------------------------------------------------- %>
      <link name="platform_batt">
      <pose>0 0 <%= platform_base_dz %>  0 0 0</pose>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass><%= platform_base_mass %></mass>
        <inertia>
          <ixx><%= platform_base_ixx %></ixx>
          <iyy><%= platform_base_iyy %></iyy>
          <izz><%= platform_base_izz %></izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="platform_base_collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://arduwoodpecker_batt/meshes/platform_batt.STL</uri>
          </mesh>
        </geometry>
        <surface>
          <contact>
            <ode>
              <max_vel>100.0</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
          <friction>
            <ode>
              <mu>100000.0</mu>
              <mu2>100000.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="platform_batt_visual">
        <geometry>
          <mesh>
            <uri>model://arduwoodpecker_batt/meshes/platform_batt.STL</uri>
          </mesh>
        </geometry>
        <material>
          <script>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>

</model>
</sdf>
